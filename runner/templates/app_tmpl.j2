apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ name }}
  namespace: argocd
  labels:
     hub/owner: {{ owner }}
spec:
  project: apps
  source:
    chart: "{{ chart.name }}"
    repoURL: "{{ chart.repo }}"
    targetRevision: "{{ chart.version }}"
    helm:
      valuesObject:
        ingress:
          enabled: true
          hosts:
          - host: "{{ host }}.app.sprinthub.nl"
            paths:
            - path: /
              pathType: ImplementationSpecific
          tls:
          - hosts:
            - "{{ name }}.app.sprinthub.nl"
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ appns }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true