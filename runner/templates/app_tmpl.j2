apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ name }}
  namespace: argocd
  labels:
     hub/owner: {{ owner }}
spec:
  project: apps
  source:
    chart: "{{ chart.name }}"
    repoURL: "{{ chart.repo }}"
    targetRevision: "{{ chart.version }}"
    helm:
      valuesObject:
        {{ chart.values | indent(8) }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ appns }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true